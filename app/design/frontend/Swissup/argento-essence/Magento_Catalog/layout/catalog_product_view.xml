<?xml version="1.0"?>
<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="catalog.product.related" remove="true"/>
        <referenceBlock name="product.info.details">
            <block class="Magento\Catalog\Block\Product\ProductList\Related" name="tab.catalog.product.related" template="Magento_Catalog::product/list/items.phtml" group="detailed_info">
                <arguments>
                    <argument name="type" xsi:type="string">related</argument>
                    <argument name="title" xsi:type="string">Related Products</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
