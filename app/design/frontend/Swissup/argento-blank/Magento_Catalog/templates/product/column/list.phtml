<?php
    $method = $block->getCollectionMethod() ? $block->getCollectionMethod() : 'getProductCollection';
?>

<?php if (($_products = $block->{$method}()) && $_products->getSize()): ?>
    <div class="block widget block-products-list">
        <div class="block-title">
            <strong><?php /* @escapeNotVerified */ echo $block->getTitle() ?></strong>
