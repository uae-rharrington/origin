<?xml version="1.0"?>
<!--
/**
 * Reorder aw_giftcard block
 * Dingding
 */
-->

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
	<!-- Remove magento_giftcard link -->
	<referenceBlock name="customer-account-navigation-gift-card-link" remove="true"/>
        <!-- Move aw_giftcard Under store payment methods -->
	<referenceBlock name="customer-account-navigation-aw-giftcard-link">
            <arguments>
                <argument name="sortOrder" xsi:type="number">150</argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
