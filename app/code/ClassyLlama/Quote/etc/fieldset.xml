<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:DataObject/etc/fieldset.xsd">
    <scope id="global">
        <fieldset id="sales_copy_order">
            <!-- Copy "is_quote_request" from order to edit order -->
            <field name="is_quote_request">
                <aspect name="to_edit" />
            </field>
            <!-- Copy "is_quote_request" from order to edit order -->
            <field name="originating_quote_id">
                <aspect name="to_edit" targetField="order_increment_id" />
            </field>
        </fieldset>
        <fieldset id="sales_convert_quote">
            <!-- Copy "is_quote_request" from quote to order -->
            <field name="is_quote_request">
                <aspect name="to_order" />
            </field>
            <!-- Copy "originating_quote_id" from quote to order -->
            <field name="originating_quote_id">
                <aspect name="to_order" />
            </field>
        </fieldset>
        <fieldset id="sales_convert_order">
            <!-- Copy "is_quote_request" from order to quote -->
            <field name="is_quote_request">
                <aspect name="to_quote" />
            </field>
            <!-- Copy "originating_quote_id" from order to quote -->
            <field name="originating_quote_id">
                <aspect name="to_quote" />
            </field>
        </fieldset>
    </scope>
</config>
