<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="checkout_cart_item_renderers"/>
    <body>
        <referenceBlock name="checkout.cart.form">
            <action method="setOverriddenTemplates">
                <argument name="productTypes" xsi:type="array">
                    <item name="default" xsi:type="string">Swissup_Suggestpage::cart/item/default.phtml</item>
                    <item name="simple" xsi:type="string">Swissup_Suggestpage::cart/item/default.phtml</item>
                    <item name="virtual" xsi:type="string">Swissup_Suggestpage::cart/item/default.phtml</item>
                    <item name="bundle" xsi:type="string">Swissup_Suggestpage::cart/item/default.phtml</item>
                    <item name="configurable" xsi:type="string">Swissup_Suggestpage::cart/item/default.phtml</item>
                    <item name="downloadable" xsi:type="string">Swissup_Suggestpage::cart/item/default.phtml</item>
                    <item name="grouped" xsi:type="string">Swissup_Suggestpage::cart/item/default.phtml</item>
                </argument>
            </action>
        </referenceBlock>
    </body>
</page>
