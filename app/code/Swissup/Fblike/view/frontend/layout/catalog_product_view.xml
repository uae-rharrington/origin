<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Swissup_Fblike::css/fbl.css"/>
    </head>
    <body>
        <referenceContainer name="product.info.social">
            <block class="Swissup\Fblike\Block\Product\Button" name="product.facebook.like" template="button.phtml" before="-" />
        </referenceContainer>
        <referenceContainer name="before.body.end">
            <block class="Swissup\Fblike\Block\Initialize" name="fblike.init" template="initialize.phtml" ifconfig="fblike/product/enabled"/>
        </referenceContainer>
    </body>
</page>
