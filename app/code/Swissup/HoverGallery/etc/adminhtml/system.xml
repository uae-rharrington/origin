<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="hovergallery" type="text" sortOrder="858" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Hover Gallery</label>
            <tab>swissup</tab>
            <resource>Swissup_HoverGallery::config_hovergallery</resource>
            <group id="general" translate="label" type="text" sortOrder="10"
                showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General</label>
                <field id="enabled" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>Image with Sort Order value 2 will be displayed on mouse hover</comment>
                </field>
            </group>
        </section>
    </system>
</config>
