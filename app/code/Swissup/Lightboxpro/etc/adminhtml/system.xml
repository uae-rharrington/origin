<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="lightboxpro" translate="label" type="text" sortOrder="1234" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Lightbox Pro</label>
            <tab>swissup</tab>
            <resource>Swissup_Lightboxpro::config_lightboxpro</resource>

            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General</label>
                <field id="enable_zoom" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Enable Zoom</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="enable_popup" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Enable Popup</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="thumbnails" translate="label" type="select" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Thumbnails Type</label>
                    <source_model>Swissup\Lightboxpro\Model\Config\Source\ThumbnailsTypes</source_model>
                </field>
            </group>

            <group id="size" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Image Sizes</label>
                <field id="image_width" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Main Image Width</label>
                    <comment>Leave empty to use theme default value</comment>
                </field>
                <field id="image_height" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Main Image Height</label>
                    <comment>Leave empty to use theme default value</comment>
                </field>
                <field id="thumbnail_width" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Thumbnail Width</label>
                    <comment>Leave empty to use theme default value</comment>
                </field>
                <field id="thumbnail_height" translate="label" type="text" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Thumbnail Height</label>
                    <comment>Leave empty to use theme default value</comment>
                </field>
            </group>

            <group id="popup" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Popup</label>
                <field id="type" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Layout Type</label>
                    <source_model>Swissup\Lightboxpro\Model\Config\Source\PopupLayouts</source_model>
                </field>
            </group>

        </section>
    </system>
</config>
